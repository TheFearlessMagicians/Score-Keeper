<%include ./partials/header%>

<div class="container">
	<h1>Load Game</h1>
</div>

<div class="container">	
	<div class="row">
	<%games.forEach(function (game){ %>
	  	<div class="col-sm-6 col-md-4">
	    	<div class="thumbnail">
	      		<div class="caption">
	        		<h3>Game: <%=game.name%> </h3>
	        		<p>	<%= game.created.toDateString() %></p>
	        		<p> Players </p>
	        		<ul class="no-bullets">
		        		<%game.players.slice(0,6).forEach(function (player){ %>
		        			<li> Player <%=player.idInGame%>: <%= player.points%> </li>
		        		<%}); %>
	        		</ul>
	        		<p>
	        			<a href="#" class="btn btn-primary" role="button">Load</a> 
	   					<%//Make this a DELETE ROUTE%>
	   					<form action="/?_method=DELETE" method="POST" accept-charset="utf-8">
	   						<input style ="display: none;" value="<%=game._id%>" type="text" name="id">
	        				<button class="btn btn-danger">Delete</button>
	   					</form>
	        		</p>
	      		</div>
	    	</div>
	  	</div>
	<% })%>
	</div>
</div>

<%include ./partials/footer%>