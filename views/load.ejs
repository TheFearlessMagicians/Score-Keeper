<%include ./partials/header%>

<div class="container">
	<h1>Load Game</h1>
</div>

<div class="container">	
	<div class="row">
	<%games.forEach(function (game){ %>
	  	<div class="col-sm-6 col-md-4">
	    	<div class="thumbnail">
	      		<div class="caption">
	        		<h3>Game: <%=game.gameNumber%> </h3>
	        		<p>	<%= game.created.toDateString() %></p>
	        		<p> Players </p>
	        		<ul class="no-bullets">
		        		<%game.players.forEach(function (player){ %>
		        			<li> Player <%=player.idInGame%>: <%= player.points%></li>
		        		<%}); %>
	        		</ul>
	        		<p>
	        			<a href="#" class="btn btn-primary" role="button">Load</a> <a href="#" class="btn btn-danger" role="button">Delete</a>
	        		</p>
	      		</div>
	    	</div>
	  	</div>
	<% })%>
	</div>
</div>

</body>
<%include ./partials/footer%>